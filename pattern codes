#include <stdio.h>
int main(){

    int n;
    printf("enter the numbers:");
    scanf("%d",&n);
    for(int i = 1;i<=n;i++){
        for(int j = 1;j<=n+1-i;j++){
            printf("%d",j);
        }
        printf("\n");
    }

return 0;

}



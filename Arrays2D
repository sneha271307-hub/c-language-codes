// 1   2
   3   4 


#include <stdio.h>
int main(){

int arr[2][2] = {{1, 2},{3, 4}};
for(int i = 0;i<2;i++){
    for(int j = 0;j<2;j++){
        printf("%d",arr[i][j]);
    }
    printf("\n");
}

return 0;


}


#include <stdio.h>
int main(){
int r;
printf("enter the rows number:\n");
scanf("%d" , &r);
int c;
printf("enter the  coloumn number:\n");
scanf("%d" , &c);
int arr[r][c];

for(int i = 0;i<2;i++){
    for(int j = 0;j<2;j++){
        scanf("%d",&arr[i][j]);
    }
}
for(int i = 0;i<2;i++){
    for(int j = 0;j<2;j++){
        printf("%d",arr[i][j]);
    }
    printf("\n");
}
return 0;
}


STORE MARKS AND ROLL NUMBER OF STUDENTS:

#include <stdio.h>

int main() {
    int rows, cols;
    printf("Enter number of rows: ");
    scanf("%d", &rows);
    printf("Enter number of columns: ");
    scanf("%d", &cols);

    int arr[rows][cols];

    printf("Enter elements:\n");
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            scanf("%d", &arr[i][j]);
        }
    }

    printf("Matrix:\n");
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            printf("%d ", arr[i][j]);
        }
        printf("\n");
    }

    return 0;
}

Addition of two matrices:

#include <stdio.h>

int main() {
    int arr[2][2] = {1,2,3,4};
    int brr[2][2] = {5,6,7,8};
    printf("\n");
    int res[2][2];
    for(int i = 0;i<2;i++){
        for(int j = 0;j<2;j++){
            res[i][j] = arr[i][j]+brr[i][j];

        }
    }
   for(int i = 0;i<2;i++){
        for(int j = 0;j<2;j++){
            printf("%d", res[i][j]);

        }
        printf("\n");
    }

    return 0;
}


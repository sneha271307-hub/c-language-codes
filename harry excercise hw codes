#include <stdio.h>
int main()
{
int a;
printf( "enter how many subjects you passed:\n");
printf("enter 1 for pass in maths\n");
printf("enter 2 for pass in science\n");
printf("enter 3 for pass in boths\n");
scanf("%d" , &a);
if (a == 1){
    printf("you passed in maths\n");

    printf("congrats you won $23\n");
}
else if ( a == 2){
    printf("you passed in science\n");
    printf(" you won $7\n");
}
else if ( a == 3){
    printf("you passed in both\n");
    printf("you won $7 ");
}
return 0;


}


finding factor of numbers code 

#include <stdio.h>
int main(int argc, char const *argv[])
{
  int num,factor;

  printf("enter the number for finding factor:");
  scanf("%d" , &num);
  printf("enter the factor to check:");
  scanf("%d" ,&factor );


  if (num % factor == 0){
    printf("the factor of number is here");

  }
 else if( factor % 2 == 0) {
  printf(" the factor of number is even here");
 }
 return 0;
}


multiplication of table

#include<stdio.h>
int main()
{
int num;
printf("enter the multiplication number:\n");
scanf("%d" , &num);
printf("multiplication of table %d:\n" , num);
printf("%d * 1 = %d",num,num*1); //here add all multiplications from where you want;
return 0;

}

////sum and avg of marks;;;;

#include <stdio.h>
int main(){

    int s1,s2,s3,s4,s5;
    int sum;
    float avg;
    printf("enter the marks of s1,s2,s3,s4,s5:\n");
    scanf("%d %d %d %d %d",&s1,&s2,&s3,&s4,&s5);
    sum = s1+s2+s3+s4+s5;
    avg = s1+s2+s3+s4+s5/5;
    printf("sum of marks is =%d\n",sum);
    printf("avg of marks = %f\n",avg);
    return 0;

}

// same problem by using switch 


#include <stdio.h>
int main(){

    int s1,s2,s3,s4,s5;
    int sum;
    float avg;
    int c;
    printf("enter the marks of s1,s2,s3,s4,s5:\n");
    scanf("%d %d %d %d %d",&s1,&s2,&s3,&s4,&s5);
    sum = s1+s2+s3+s4+s5;
    avg = s1+s2+s3+s4+s5/5;
    printf("enter 1 for sum of marks:\n",sum);
    printf("enter 2 for avg of marks:\n",avg);
    scanf("%d",&c); // take into c when you want any choice in code you have to make a separte variable for that
    
    switch (c)
    {
    case 1:
        printf("sum of marks is =%d\n", sum);
        break;
    case 2:
        printf("avg of marks is =%f\n",avg);
    
    default:
    printf("invalid error");
        break;
    }
    return 0;

}


//simple interst code
#include <stdio.h>
float simpleinterst(int a,int b,int c)
{
    return a*b*c/100;
}
int main()
{
float a;
float b;
float c;
float num;
printf("enter number for S.I:\n");
scanf("%f %f %f",&a,&b,&c);
num = a*b*c/100;
printf("the simple inetrst is %f\n",num);
return 0;

}

// finding which is greater code

#include <stdio.h>

int main(){

int a;
int b;
printf("enter the numbers you want to check greater:\n");
scanf("%d %d",&a,&b);
if(a>b){
    printf("the a  (%d\n) is bigger than b (%d\n)",a,b);
}
else if(b>a){
    printf("the b (%d\n) is greater then a (%d\n)",a,b);
}   // if i will not use that (%d\n) then it also shows me some garbage values so make sure you use this/

else {
    printf("Both are equal: %d and %d\n", a, b);
}
return 0;
}
 // a code for finding conversion;

#include <stdio.h>

int main(int argc, char const *argv[])
{
    int num;
    float km_miles;
    float kg_g;
    float inches_meters;
    float feet_cm;
    int c;
    printf("enter the numbers for conversions:\n");
    scanf("%d",&num);
    km_miles = (num*0.621371);
    kg_g = (num*1000.0);
    inches_meters = (num*0.254);
    feet_cm = (num*30.48);
    printf("the km_miles of number is = %f\n",km_miles);
    printf("the kg_g of number is = %f\n",kg_g);
    printf("the  inches_meters of number is = %f\n",inches_meters);
    printf("the feet_cm of number is = %f\n",feet_cm);
    scanf("%d",&c);
    
    switch (c)
    {
    case 1:
    printf("conversion for km_miles (%f\n),km_miles");
        break;
    case 2:
    printf("conversion for kg_g (%f\n),kg_g");
    break;
    case 3:
    printf("conversion for inches_meters (%f\n),inches_meters");
    break;
    case 4:
    printf("conversion for feet_cm (%f\n),feet_cm");
        break;

    default:
        break;
    }
    return 0; 

}
